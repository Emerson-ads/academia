{% extends "layout.njk" %}

{% block content %}

    <div class="card table-container">
        <table width="100%">
            <thead>
                <tr>
                    <th>Instructor</th>
                    <th>Atendimento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for instructors in instructor%}
                    <tr>
                        <td>
                            <span style="background-image: url({{instructors.avatar_url}})"></span>
                            {{instructors.name}}
                        </td>
                        <td> 
                          <span>{{instructors.services}}</span>
                        </td>
                        <td> <a href="/instructors/{{instructors.id}}">Ver</td>

                    </tr>
                {%endfor%}
            </tbody>
        </table>
        
    </div>
{% endblock content %}